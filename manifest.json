{
    "manifest_version": 3,
    "name": "Filter.io",
    "version": "1.0.0",
    "description": "Filterio uses facial recognition to overlay images and filters onto a video feed from a webcam.",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_title": "Filter.io"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "dist/*",
                "dist/node_modules/@mediapipe/face_mesh/face_mesh.js",
                "dist/node_modules/@mediapipe/face_mesh/face_mesh_solution_packed_assets.data",
                "dist/node_modules/@mediapipe/face_mesh/face_mesh_solution_packed_assets_loader.js",
                "dist/node_modules/@mediapipe/face_mesh/face_mesh_solution_simd_wasm_bin.js",
                "dist/node_modules/@mediapipe/face_mesh/face_mesh_solution_simd_wasm_bin.wasm",
                "dist/node_modules/@mediapipe/face_mesh/face_mesh_solution_wasm_bin.js",
                "dist/node_modules/@mediapipe/face_mesh/face_mesh_solution_wasm_bin.wasm",
                "dist/node_modules/@mediapipe/face_mesh/face_mesh.binarypb",
                "dist/node_modules/@mediapipe/camera_utils/camera_utils.js",
                "dist/node_modules/@mediapipe/drawing_utils/drawing_utils.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
}