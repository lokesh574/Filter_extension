{
    "manifest_version": 3,
    "name": "Filter.io",
    "version": "1.0.0",
    "description": "Filterio uses facial recognition to overlay images and filters onto a video feed from a webcam.",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_title": "Filter.io"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "dist/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
}